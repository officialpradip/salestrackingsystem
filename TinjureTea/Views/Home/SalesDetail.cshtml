        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="form-group col-md-6">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Sales Report</div>
                    </div>

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                @*<th>Sales Id</th>
                                <th>Product Id</th>*@
                                <th>Unite Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Created By</th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody id="trDiv"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        GetAllDetails();
    });

    function SaveDetails() {
        var detail = new Object();
        detail.SalesId = $("#salesid").val();
        detail.ProductId = $("#productid").val();
        detail.UnitPrice = $("#unitprice").val();
        detail.Quantity = $("#quantity").val();
        detail.Total = $("#total").val();
        detail.CreatedBy = $("#createdby").val();
        
        var data = JSON.stringify({
            sd: detail
        });
        return $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: "/Home/SaveDetails",
            data: data,
            success: function (result) {
                if (result == true) {
                    GetAllDetails();
                    Reset();
                    alert("Save Success!");
                }
                else {
                    alert("Save failed!");
                }
            },
            error: function () {
                alert("Error!")
            }
        });
    }

    function GetAllDetails() {
        $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'Get',
            url: "/Home/GetAllDetails",
            success: function (data) {
                $("#trDiv").html('');
                var tdContent = '';
                for (var i = 0; i < data.length; i++) {
                    tdContent += '<tr><td>' + data[i].SalesId + '</td>' + '<td>' + data[i].ProductId + '</td>' + '<td>' + data[i].UnitPrice + '</td>' + '<td>' + data[i].Quantity + '</td>' + '<td>' + data[i].Total + '</td>' + '<td>' + data[i].CreatedBy + '</td>' + '<td><a href="#" onclick="Edit(' + data[i].CategoryId + ",'" + data[i].Name + "'," + data[i].Status + ');">Edit</a></td></tr>'; // if Name is property of your Person object
                }
                $("#trDiv").append(tdContent);
            },
            error: function () {
                alert("Error!")
            }
        });
    }
    function Reports() {
        $.ajax({
            url: "Home/GenerateReports"
        });
    }
    function Edit(catId, catName, status) {
        $("#categoryId").val(catId);
        $("#categoryName").val(catName);
        $("#status").val(status);
    }
    function Reset() {
        $("#categoryId").val(null);
        $("#categoryName").val(null);
        $("#status").val(null);
    }
</script>