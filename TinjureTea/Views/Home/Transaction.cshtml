
@{
    ViewBag.Title = "Transaction";
}

<h2>Transaction</h2>

<div class="col-xl-12 col-md-12 mb-12">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">

                    <form class="user">

                        <div class="form-group col-md-6">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Transaction</div>
                        </div>
                        <input type="hidden" id="transactionId" />
                        <input type="hidden" id="status" />

                       

                        <div class="form-group col-md-6">
                            <input type="text" class="form-control form-control-user" id="retailerid" aria-describedby="emailHelp" placeholder="ID">
                        </div>

                        <div class="form-group col-md-6">
                            <input type="date" class="form-control form-control-user" id="date" aria-describedby="emailHelp" placeholder="Date">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="text" class="form-control form-control-user" id="balance" aria-describedby="emailHelp" placeholder="Balance">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="text" class="form-control form-control-user" id="productid" aria-describedby="emailHelp" placeholder="Product Id">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="text" class="form-control form-control-user" id="salesid" aria-describedby="emailHelp" placeholder="Sales Id">
                        </div>

                        <div class="form-group col-md-6">
                            <a href="#" onclick="SaveTransaction()" class="btn btn-primary btn-sm">
                                Save
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="col-xl-12 col-md-12 mb-12">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="form-group col-md-6">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Transaction Details</div>
                    </div>

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                
                                <th>Retailer ID</th>
                                <th>Date</th>
                                <th>Balance</th>
                                <th>Product Id</th>
                                <th>Sales Id</th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody id="trDiv"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        GetAllTransaction();
    });

    function SaveTransaction() {
        var trans = new Object();
       
        trans.RetailerId = $("#retailerid").val();
        trans.Date = $("#date").val();
        trans.Balance = $("#balance").val();
        trans.ProductId = $("#productid").val();
        trans.SalesId = $("#salesid").val();

        var data = JSON.stringify({
            t: trans
        });
        return $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: "/Home/SaveTransaction",
            data: data,
            success: function (result) {
                if (result == true) {
                    GetAllTransaction();
                    Reset();
                    alert("Save Success!");
                }
                else {
                    alert("Save failed!");
                }
            },
            error: function () {
                alert("Error!")
            }
        });
    }
    function GetAllTransaction() {
        $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'Get',
            url: "/Home/GetAllTransaction",
            success: function (data) {
                $("#trDiv").html('');
                var tdContent = '';
                for (var i = 0; i < data.length; i++) {
                    tdContent += '<tr><td>' + data[i].RetailerId + '</td>'  + '<td>' + data[i].Date + '</td>' + '<td>' + data[i].Balance + '</td>' + '<td>' + data[i].ProductId + '</td>' + '<td>' + data[i].SalesId + '</td>'+ '<td><a href="#" onclick="Edit(' + data[i].TransactionId + ",'" + data[i].Name + ');">Edit</a></td></tr>'; // if Name is property of your Person object
                }
                $("#trDiv").append(tdContent);
            },
            error: function () {
                alert("Error!")
            }
        });
    }
    function Edit(catId, catName, status) {
        $("#categoryId").val(catId);
        $("#categoryName").val(catName);
        $("#status").val(status);
    }
    function Reset() {
        $("#categoryId").val(null);
        $("#categoryName").val(null);
        $("#status").val(null);
    }
</script>